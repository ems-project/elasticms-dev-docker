<div>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#dumpModal" id="dump-modal">
      <i class="fas fa-bug"></i> <span class="sr-only">Show dump</span>
    </button>
    
    <!-- Modal -->
    <div class="modal fade" id="dumpModal" tabindex="-1" role="dialog" aria-labelledby="dumpModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="dumpModalLabel"><i class="fas fa-bug"></i> Dump</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            {{ dump() }}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
</div>